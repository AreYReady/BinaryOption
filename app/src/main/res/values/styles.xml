<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/rv_item_decoration</item>
    </style>

    <style name="text_prompt_erro">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="text_desc_">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="text_desc_small">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="text_desc_small_xx">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text_button_style" parent="text_desc_">
        <item name="android:gravity">center</item>
    </style>

    <style name="text_desc_big">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_pop_enter_</item>
        <item name="android:windowExitAnimation">@anim/bottom_pop_exit_</item>
    </style>

    <style name="radio_button_orange" parent="text_desc_">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/v_button_pay_h</item>
        <item name="android:background">@drawable/button_select_red</item>

        <item name="android:gravity">center</item>
    </style>

    <style name="pay_button_selsct" parent="text_desc_">
        <item name="android:layout_marginRight">@dimen/space_xbig</item>
        <item name="android:background">@drawable/button_select_red</item>
    </style>

    <style name="enter_button_style" parent="text_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/v_button_enter_h</item>
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:layout_marginLeft">@dimen/space_xxbig</item>
        <item name="android:layout_marginRight">@dimen/space_xxbig</item>
    </style>
</resources>
