<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/background"
              android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/background_button_orange_normal"
        android:layout_width="match_parent"
        android:layout_height="30dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_desc_"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_xxxbig"
            android:text="充值金额"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/background_char"
        android:layout_height="115dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/space_xxxbig"
            android:layout_marginLeft="@dimen/space_xxxbig"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/b_button1"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:width="@dimen/v_button_money_w"
                    android:layout_height="@dimen/v_button_pay_h"
                    android:text="5000"
                    style="@style/pay_button_selsct"
                    />
                <Button
                    android:id="@+id/b_button2"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/v_button_pay_h"
                    android:text="5000"
                    style="@style/pay_button_selsct"/>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/b_button3"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="@dimen/v_button_pay_h"
                        android:text="5000"
                        style="@style/pay_button_selsct"/>
                    <Button
                        android:id="@+id/b_button4"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="@dimen/v_button_pay_h"
                        android:text="5000"
                        style="@style/text_desc_"
                        android:background="@drawable/button_select_orange"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xbig"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/b_button5"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/v_button_pay_h"
                    android:text="5000"
                    android:layout_marginBottom="@dimen/space_big"
                    style="@style/pay_button_selsct"/>
                <Button
                    android:id="@+id/b_button6"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/v_button_pay_h"
                    android:text="5000"
                    style="@style/pay_button_selsct"/>
                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/space_micro"
                    android:background="@drawable/button_select_orange"
                    android:layout_height="@dimen/v_button_pay_h"
                    style="@style/text_desc_small"
                    android:textColorHint="@color/text_color_white"
                    android:gravity="center"
                    android:hint="输入金额，最小为100"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_char"
        >
        
  
    <RelativeLayout
        android:background="@color/background_button_orange_normal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_xxbig"
        android:layout_height="30dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_desc_"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_xxxbig"
            android:text="充值方式"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/space_xxxxbig"
        android:layout_marginRight="@dimen/space_xxxxbig"
        android:layout_height="48dip">
        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/text_desc_small"
            android:layout_gravity="center_vertical"
            android:text="银联支付（建议使用）"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:background="@color/link_gray"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/space_xxxxbig"
        android:layout_marginRight="@dimen/space_xxxxbig"
        android:layout_height="48dip">
        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/text_desc_small"
            android:layout_gravity="center_vertical"
            android:text="支付宝扫码"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:background="@color/link_gray"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/space_xxxxbig"
        android:layout_marginRight="@dimen/space_xxxxbig"
        android:layout_height="48dip">
        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/text_desc_small"
            android:layout_gravity="center_vertical"
            android:text="微信支付（请先绑定微信）"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:background="@color/link_gray"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="@dimen/space_big"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:text="充值"
        android:layout_marginTop="@dimen/space_xxbig"
        style="@style/enter_button_style"
        />
</LinearLayout>