<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dip"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/iv_image1"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="@dimen/space_big_half"
                android:background="@mipmap/info01"
                />

            <TextView
                android:id="@+id/tv_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/text_desc_"
                android:text="下单交易"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:background="@color/link_gray"/>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="@dimen/space_big_half"
                android:background="@mipmap/info01"
                />

            <TextView
                android:id="@+id/tv_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/text_desc_"
                android:text="下单交易"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>