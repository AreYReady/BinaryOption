<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_tag_parent"
                android:layout_width="100dip"
                android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_symbol"
            style="@style/text_desc_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="比特币"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_symbol_amount"
                style="@style/text_desc_small"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="500000"/>

            <ImageView
                android:id="@+id/iv_symbol_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/red"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_link"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/link_gray"
        android:layout_alignParentBottom="true"
        >
    </View>
</RelativeLayout>