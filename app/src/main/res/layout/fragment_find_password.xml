<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/background"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_editText_h">
        <TextView
            android:layout_marginLeft="50dip"
            android:layout_width="100dip"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="原密码"
            style="@style/text_desc_"
            />
        <EditText
            android:layout_width="0dip"
            android:layout_weight="1"
            android:hint="请输入原密码"
            android:textColorHint="@color/link_gray"
            style="@style/text_desc_"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/link_gray"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_editText_h">
        <TextView
            android:layout_marginLeft="50dip"
            android:layout_width="100dip"
            android:gravity="center_vertical"
            android:text="新密码"
            style="@style/text_desc_"
            android:layout_height="match_parent"

            />
        <EditText
            android:layout_width="0dip"
            android:layout_weight="1"
            android:hint="请输入新密码"
            android:textColorHint="@color/link_gray"
            style="@style/text_desc_"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/link_gray"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_editText_h">
        <TextView
            android:layout_marginLeft="50dip"
            android:layout_width="100dip"
            android:gravity="center_vertical"
            android:text="确认新密码"
            style="@style/text_desc_"
            android:layout_height="match_parent"
            />
        <EditText
            android:layout_width="0dip"
            android:layout_weight="1"
            android:hint="请再次输入新密码"
            android:textColorHint="@color/link_gray"
            style="@style/text_desc_"
            android:gravity="center_vertical|left"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/link_gray"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/b_enter"
        android:text="提交"
        android:layout_marginTop="@dimen/space_xxbig"
        style="@style/enter_button_style"
        />

</LinearLayout>