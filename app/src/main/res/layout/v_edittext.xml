<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_edit_text_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/v_editText_h"
    android:background="@drawable/background_edittext"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_edit_text_icon"
        android:layout_width="30dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_xxbig"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/space_big"
        android:layout_marginBottom="@dimen/space_big"
        />
    <EditText
        android:id="@+id/et_edit_text"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:singleLine="true"
        android:background="@null"
        android:textColorHint="@android:color/white"
        style="@style/text_desc_"
        android:textSize="15sp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_xxbig"
        android:hint="@string/app_name"/>
    <TextView
        android:id="@+id/tv_check_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:layout_marginRight="@dimen/space_big"
        style="@style/text_desc_big"
        />
</LinearLayout>

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入错误"
        android:visibility="invisible"
        style="@style/text_prompt_erro"/>
</LinearLayout>