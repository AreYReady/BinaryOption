<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_xxbig"
    android:layout_marginBottom="@dimen/space_xxbig">
    <FrameLayout
        android:layout_width="0dip"
        android:layout_weight="130"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/red"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="191"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_desc_"
            android:text="欧元"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_desc_small_xx"
                android:layout_marginRight="@dimen/space_big"
                android:text="买入价格"/>
            <TextView
                android:id="@+id/tv_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_desc_small_xx"
                android:text="0.74545"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_desc_small_xx"
                android:layout_marginRight="@dimen/space_big"
                android:text="下单价格"/>
            <TextView
                android:id="@+id/tv_amount_acount"
                android:layout_width="wrap_content"
                style="@style/text_desc_small_xx"
                android:layout_height="wrap_content"
                android:text="0.74545"/>
        </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="280"
        android:orientation="vertical"
        android:gravity="left|center_vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_desc_"
            android:visibility="invisible"
            android:text=""/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                style="@style/text_desc_small_xx"
                android:layout_marginRight="@dimen/space_big"
                android:layout_height="wrap_content"
                android:text="当前价格"/>
            <TextView
                android:id="@+id/tv_current_price"
                android:layout_width="wrap_content"
                style="@style/text_desc_small_xx"
                android:layout_height="wrap_content"
                android:text="0.845454"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_desc_small_xx"
                android:layout_marginRight="@dimen/space_big"
                android:text="下单时间"/>
            <TextView
                android:id="@+id/tv_order_time"
                style="@style/text_desc_small_xx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-5-1 15:30"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="120"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:layout_height="match_parent">

    </LinearLayout>
</LinearLayout>