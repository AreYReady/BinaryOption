<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:customEditText="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/loginbg"
    android:paddingLeft="@dimen/space_xxxbig"
    android:paddingRight="@dimen/space_xxxbig"
    tools:context=".mvp.login.LoginActivity">
    <ImageView
        android:layout_marginTop="45dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/icon"/>
    <com.xkj.binaryoption.widget.CustomEditText
        android:id="@+id/cet_account"
        android:layout_marginTop="35dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        customEditText:inputType="number"
        customEditText:hint="请输入手机号码"
        customEditText:signImage="@mipmap/phone1"
        />
    <com.xkj.binaryoption.widget.CustomEditText
        android:id="@+id/cet_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        customEditText:hint="请输入密码"
        customEditText:inputType="PASSWORD"
        customEditText:signImage="@mipmap/pwd1"
        />
    <Button
        android:id="@+id/b_login"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:text="登入"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/button_orange"
        />
    <Button
        android:id="@+id/b_sign_up"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="17dip"
        android:text="注册账号"
        android:background="@drawable/button_sign"
        style="@style/text_button_style"/>
    <RelativeLayout
        android:layout_marginTop="17dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            style="@style/text_desc_"
            android:theme="@style/my_checkbox"
            android:text="记住我"/>
        <TextView
            android:id="@+id/tv_lost_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_desc_"
            android:layout_alignParentRight="true"
            android:text="忘记密码  ?"/>
    </RelativeLayout>
</LinearLayout>