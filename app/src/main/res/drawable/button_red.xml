<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <solid android:color="@color/background_button_red_normal"></solid>
            <stroke android:width="1dip" android:color="@color/background_button_red_normal"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="5dip"/>
            <solid android:color="@color/background_button_red"></solid>
            <stroke android:width="0.1dip" android:color="@color/background_button_red"/>
        </shape>
    </item>
</selector>